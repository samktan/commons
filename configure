
create_link () {
	s=$1
	d=$2
	if [ -f $d ]; then
		printf "File $d exists, YES to replace, else to skip? "; read r
		if [ "xxx${r}xxx" != "xxxYESxxx" ]; then
			echo "Skipping $d ..."
			return
		fi
		echo "Removing $d ..."
		rm $d
	fi
	echo "Creating link $s ..."
	ln -s $s $d
}


CMD_PATH=$(realpath $0)
CMD_DIR=$(dirname ${CMD_PATH})

create_link $CMD_DIR/profile $HOME/.profile
create_link $CMD_DIR/profile $HOME/.zprofile

